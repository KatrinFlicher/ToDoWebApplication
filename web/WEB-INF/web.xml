<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>MVC_Test</display-name>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.LoginController</servlet-class>
        <init-param>
            <param-name>dao</param-name>
            <param-value>sql</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistrateController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.RegistrateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrateController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TaskController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.TaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskController</servlet-name>
        <url-pattern>/taskcontrol</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditTaskController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.EditTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditTaskController</servlet-name>
        <url-pattern>/edittask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddTaskController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.AddTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTaskController</servlet-name>
        <url-pattern>/addtask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileController</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.FileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileController</servlet-name>
        <url-pattern>/fileservice</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>by.gsu.epamlab.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/main/*</url-pattern>
        <url-pattern>/addtask</url-pattern>
        <url-pattern>/edittask</url-pattern>
        <url-pattern>/fileservice</url-pattern>

    </filter-mapping>

    <!--
     <welcome-file-list>
            <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    -->
</web-app>